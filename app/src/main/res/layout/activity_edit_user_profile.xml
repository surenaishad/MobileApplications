<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uncc.mysocialapp.activities.EditUserProfile"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="369dp"
        android:layout_height="57dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        tools:layout_editor_absoluteX="44dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="58dp"
            app:srcCompat="@drawable/ic_action_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Social App"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="21dp" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="23dp"
            app:srcCompat="@drawable/logout"
            android:id="@+id/logout"
            android:background="?attr/selectableItemBackground"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="118dp"
        android:layout_height="104dp"
        app:srcCompat="@drawable/app_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="76dp"
        android:layout_marginLeft="125dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="125dp"
        tools:layout_editor_absoluteX="167dp" />

    <EditText
        android:id="@+id/editFname"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/editLname"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Last Name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editFname"
        android:layout_marginLeft="14dp"/>

    <EditText
        android:id="@+id/editEid"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/editLname"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/editDob"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:hint="Date of Birth"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editEid"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDob"
        android:layout_marginTop="0dp" />

    <EditText
        android:id="@+id/editRepass"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editPass"/>

    <Button
        android:id="@+id/editSave"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"
        android:background="#8b9dc3"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/editRepass"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>
