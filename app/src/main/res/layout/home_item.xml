<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/cardView"
        app:cardBackgroundColor="@color/cardBackground">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/homeItemUsername"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Naishad Sure"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7dp" />

            <TextView
                android:id="@+id/homeItemTime"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="10 minutes ago "
                android:ellipsize="marquee"
                android:maxLines="1"
                android:gravity="right"
                app:layout_constraintLeft_toRightOf="@+id/homeItemUsername"
                android:layout_marginLeft="7dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                tools:layout_editor_absoluteX="191dp" />

            <TextView
                android:id="@+id/homeItemMessage"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do , eiusmod tempor incididunt, Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do , eiusmod tempor incididunt"
                android:ellipsize="end"
                android:textSize="16sp"
                android:maxLines="2"
                android:layout_marginLeft="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/homeItemUsername" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>